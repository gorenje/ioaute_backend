.flickr_image{ }
  - img_dom_id = dom_id(page_element,"image").gsub(/_/,'')
  - owner_url = page_element.construct_owner_url
  %a{ :href => page_element.extra_data["dest_url"] || owner_url, :target => '_blank' }
    %img{ :id => img_dom_id, :src => page_element.construct_flickr_image_url, :width => page_element.width, :height => page_element.height }
  %a.copyright{ :href => owner_url, :target => '_blank' } &copy;
  - if (title = page_element.flickr_title)
    %span.flickr_image_title= title
  - if page_element.reload_image?    
    :javascript
      new PeriodicalExecuter(function(pe) { 
        reloadImg('#{img_dom_id}'); 
      }, #{page_element.reload_interval_seconds});
  - if page_element.is_rotated?
    :css
      div##{dom_id(page_element)} {
        -webkit-transform: rotate(#{page_element.rotation_in_degrees}deg);
        -moz-transform: rotate(#{page_element.rotation_in_degrees}deg);
        transform: rotate(#{page_element.rotation_in_degrees}deg);
      }
