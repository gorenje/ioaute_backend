.flickr_image{ }
  - img_dom_id = dom_id(page_element,"image").gsub(/_/,'')
  - owner_url = page_element.construct_owner_url
  %a{ :href => page_element.extra_data["dest_url"] || owner_url, :target => '_blank' }
    %img{ :id => img_dom_id, :src => page_element.construct_flickr_image_url, :width => page_element.width, :height => page_element.height }
  - if page_element.show_copyright?
    %a.copyright{ :href => owner_url, :target => '_blank' } &copy;
    - if (title = page_element.flickr_title)
      %span.flickr_image_title= h(title)
  = render :partial => 'page_elements/_page_element_image_reload', :locals => { :page_element => page_element, :img_dom_id => img_dom_id }
  = render :partial => 'page_elements/_page_element_rotation', :locals => { :page_element => page_element }
