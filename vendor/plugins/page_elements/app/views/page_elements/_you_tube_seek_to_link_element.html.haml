:css
  a##{dom_id(page_element,'you_tube_seek')} {
    color: #{page_element.css_color_spec}; 
    #{page_element.css_font_spec};
    text-decoration: none;
  }
-# TODO this is crap and should be put into the model but dom_id is not accessible there
- ytvideo = page_element.video
- vid_dom_id = dom_id(ytvideo.nil? ? page_element : ytvideo, "video").gsub(/_/,'')
.you_tube_seek_to_link_element{ }
  %a{ :href => 'javascript:void(0);', :onclick => "youTubePlayVideoAt('#{vid_dom_id}', #{page_element.start_at}, #{page_element.end_at}); return false;", :id => dom_id(page_element,'you_tube_seek')}
    = ytvideo.nil? ? "!! WARNING !! NO MATCHING VIDEO FOUND" : preserve(page_element.text.nbsp_leading_whitespace)
