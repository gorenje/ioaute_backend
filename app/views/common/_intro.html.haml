#pageHeader
  %h1
    %span 
      %a{ :href => "/" }
        PublishMe
  %h2
    %span
      The Beauty of Online Publishing
#quickSummary
  %p.p1
    %span
      Become your own editor and publish content from your friends.
  %p.p2
    %span
      - if user_signed_in?
        %a{:href => destroy_user_session_path, :title => "Logout"} Logout
        |
        %a{:href => user_publications_path, :title => "My Publications"} My Publications
        |
        %a{:href => publication_details_path, :title => "New Publication", :onclick=>"this.href=this.href+'?dpi='+getDPI();"} New Publication
      - else
        %fb:login-button{ :autologoutlink => "true", :perms => "user_photos" }
        |
        %a{:href => user_sign_in_twitter_path, :title => "Twitter Login"} Sign in with Twitter Account
#preamble
  %p{ :class => "notice" }= notice
  %p{ :class => "alert" }= alert
